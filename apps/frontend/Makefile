.PHONY: deploy build-local

# ë°°í¬ ëŒ€ìƒ ì„œë²„ ëª©ë¡
DEPLOY_SERVERS ?= ktb-fe01
DEPLOY_PATH ?= /home/ubuntu/ktb-chat-frontend

# ë¡œì»¬ì—ì„œ í”„ë¡œë•ì…˜ ë¹Œë“œ
build-local:
	@echo "ğŸ—ï¸  Building locally..."
	npm run build:production
	@echo "âœ… Local build completed!"

deploy:
	@echo "ğŸ“¦ Deploying to remote servers..."
	@for server in $(DEPLOY_SERVERS); do \
		echo "â†’ Deploying to $$server..."; \
		# [ìˆ˜ì •] ssh ì ‘ì† ì‹œ ubuntu ê³„ì • ëª…ì‹œ
		ssh -o StrictHostKeyChecking=no ubuntu@$$server "mkdir -p $(DEPLOY_PATH)"; \
		\
		echo "  ğŸ“ Copying standalone build..."; \
		# [ìˆ˜ì •] rsync ì ‘ì† ì‹œ ubuntu ê³„ì • ëª…ì‹œ
		rsync -avz --delete --exclude='*.log' --exclude='.env*' --exclude="server.pid" --exclude='/package.json' \
			-e "ssh -o StrictHostKeyChecking=no" \
			.next/standalone/ ubuntu@$$server:$(DEPLOY_PATH)/; \
		\
		echo "  ğŸ“ Copying static files..."; \
		rsync -avz --delete \
			-e "ssh -o StrictHostKeyChecking=no" \
			.next/static ubuntu@$$server:$(DEPLOY_PATH)/.next/; \
		\
		echo "  ğŸ“ Copying public files..."; \
		rsync -avz --delete \
			-e "ssh -o StrictHostKeyChecking=no" \
			public ubuntu@$$server:$(DEPLOY_PATH)/; \
		\
		echo "  ğŸ“ Copying restart script..."; \
		rsync -avz \
			-e "ssh -o StrictHostKeyChecking=no" \
			restart.sh ubuntu@$$server:$(DEPLOY_PATH)/; \
		\
		echo "  ğŸ”„ Restarting server..."; \
		# [ìˆ˜ì •] ì¬ì‹œì‘ ëª…ë ¹ ì‹œ ubuntu ê³„ì • ëª…ì‹œ
		ssh -o StrictHostKeyChecking=no ubuntu@$$server "cd $(DEPLOY_PATH) && chmod +x restart.sh && ./restart.sh"; \
		\
		echo "âœ… Deployment to $$server completed!"; \
	done
	@echo "âœ… All deployments completed!"